<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/memoListItem_iv_thumbnail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/memoListItem_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/memoListItem_iv_thumbnail"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/memoListItem_tv_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/memoListItem_tv_title"
        android:layout_toRightOf="@id/memoListItem_iv_thumbnail"
        android:textSize="15dp" />
</RelativeLayout>